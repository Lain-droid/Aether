<Window x:Class="AetherVisor.Frontend.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AetherVisor.Frontend.Controls"
        Title="Aether" Width="1024" Height="640" WindowStartupLocation="CenterScreen"
        Background="Black" Foreground="#EEE">
    <Window.Resources>
        <SolidColorBrush x:Key="ColorBlack" Color="#000000"/>
        <SolidColorBrush x:Key="ColorWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ColorGray1" Color="#111111"/>
        <SolidColorBrush x:Key="ColorGray2" Color="#222222"/>
        <SolidColorBrush x:Key="ColorGray3" Color="#444444"/>

        <Style x:Key="MonoButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorGray2}"/>
            <Setter Property="Foreground" Value="{StaticResource ColorWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorGray3}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ColorGray3}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource ColorGray1}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource ColorGray1}" Padding="16">
            <DockPanel>
                <TextBlock Text="Aether" FontSize="18" FontWeight="Bold" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Spacing="8">
                    <Button Style="{StaticResource MonoButton}" Content="Inject" Command="{Binding InjectCommand}"/>
                    <Button Style="{StaticResource MonoButton}" Content="Execute" Command="{Binding ExecuteScriptCommand}"/>
                    <Button Style="{StaticResource MonoButton}" Content="Settings" Click="OpenSettings_Click"/>
                    <Button Style="{StaticResource MonoButton}" Content="Minimize" Click="Minimize_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Body: Sidebar + Editor + Right Panel (optional) -->
        <Grid Grid.Row="1" Background="{StaticResource ColorBlack}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Storyboard x:Key="FocusGlow">
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.0" To="0.6" Duration="0:0:0.20" AutoReverse="True"/>
                </Storyboard>
            </Grid.Resources>
            <!-- Sidebar (file explorer) -->
            <Border Grid.Column="0" Margin="12" Background="{StaticResource ColorGray2}" CornerRadius="4">
                <DockPanel>
                    <TextBlock Text="Explorer" Margin="10,8" Foreground="#AAA"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TreeView ItemsSource="{Binding Files}" SelectedItemChanged="TreeView_SelectedItemChanged">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <TextBlock Text="{Binding Name}"/>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Editor center with tabs -->
            <Border Grid.Column="1" Margin="12" Background="{StaticResource ColorGray2}" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TabControl Grid.Row="0" ItemsSource="{Binding Tabs}" SelectedItem="{Binding ActiveTab}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FileName}"/>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <local:ScriptEditor Text="{Binding DataContext.ScriptText, RelativeSource={RelativeSource AncestorType=TabControl}, UpdateSourceTrigger=PropertyChanged}"/>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                    <!-- Search/replace bar -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8" Spacing="6">
                        <TextBlock Text="Find" VerticalAlignment="Center"/>
                        <TextBox Width="160" x:Name="FindBox"/>
                        <TextBlock Text="Replace" VerticalAlignment="Center"/>
                        <TextBox Width="160" x:Name="ReplaceBox"/>
                        <Button Style="{StaticResource MonoButton}" Content="Find" Click="Find_Click"/>
                        <Button Style="{StaticResource MonoButton}" Content="Replace" Click="Replace_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom terminal -->
        <Border Grid.Row="2" Background="{StaticResource ColorGray1}" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Terminal" Foreground="#AAA"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding ConsoleOutput}"
                         Background="{StaticResource ColorBlack}" Foreground="{StaticResource ColorWhite}" BorderBrush="{StaticResource ColorGray3}" BorderThickness="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>
