<Window x:Class="AetherVisor.Frontend.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AetherVisor.Frontend.Controls"
        Title="Aether" Width="1024" Height="640" WindowStartupLocation="CenterScreen"
        Background="Black" Foreground="#EEE">
    <Window.Resources>
        <SolidColorBrush x:Key="ColorBlack" Color="#000000"/>
        <SolidColorBrush x:Key="ColorWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ColorGray1" Color="#111111"/>
        <SolidColorBrush x:Key="ColorGray2" Color="#222222"/>
        <SolidColorBrush x:Key="ColorGray3" Color="#444444"/>

        <Style x:Key="MonoButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorGray2}"/>
            <Setter Property="Foreground" Value="{StaticResource ColorWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorGray3}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ColorGray3}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource ColorGray1}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource ColorGray1}" Padding="16">
            <DockPanel>
                <TextBlock Text="Aether" FontSize="18" FontWeight="Bold" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Spacing="8">
                    <Button Style="{StaticResource MonoButton}" Content="Inject" Command="{Binding InjectCommand}"/>
                    <Button Style="{StaticResource MonoButton}" Content="Execute" Command="{Binding ExecuteScriptCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Editor -->
        <Grid Grid.Row="1" Grid.Column="0" Background="{StaticResource ColorBlack}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="180"/>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Storyboard x:Key="FocusGlow">
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.0" To="0.6" Duration="0:0:0.20" AutoReverse="True"/>
                </Storyboard>
            </Grid.Resources>
            <Border Margin="12" Background="{StaticResource ColorGray2}" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Script" Margin="10,8" Foreground="#AAA"/>
                    <local:ScriptEditor Grid.Row="1" Margin="10" Text="{Binding ScriptText, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Border>

            <!-- Console -->
            <Border Grid.Row="1" Margin="12" Background="{StaticResource ColorGray2}" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Console" Margin="10,8" Foreground="#AAA"/>
                    <ListBox Grid.Row="1" Margin="10" ItemsSource="{Binding ConsoleOutput}"
                             Background="{StaticResource ColorBlack}" Foreground="{StaticResource ColorWhite}" BorderBrush="{StaticResource ColorGray3}" BorderThickness="1">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Opacity" Value="0"/>
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation To="1" Duration="0:0:0.20" Storyboard.TargetProperty="Opacity"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Side Panel -->
        <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource ColorGray1}" Padding="12">
            <StackPanel>
                <TextBlock Text="Actions" Margin="0,0,0,8"/>
                <Button Style="{StaticResource MonoButton}" Content="Inject" Command="{Binding InjectCommand}" Margin="0,0,0,8"/>
                <Button Style="{StaticResource MonoButton}" Content="Execute" Command="{Binding ExecuteScriptCommand}"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="{StaticResource ColorGray1}" Padding="10">
            <TextBlock Text="Monochrome Theme â€¢ Aether" HorizontalAlignment="Right" Foreground="#888"/>
        </Border>
    </Grid>
</Window>
