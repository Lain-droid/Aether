<Window x:Class="AetherVisor.Frontend.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aether • Setup" Width="720" Height="420" WindowStartupLocation="CenterScreen"
        Background="Black" Foreground="#EEE">
    <Window.Resources>
        <SolidColorBrush x:Key="ColorGray1" Color="#111111"/>
        <SolidColorBrush x:Key="ColorGray2" Color="#222222"/>
        <SolidColorBrush x:Key="ColorGray3" Color="#444444"/>
        <Style x:Key="MonoButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorGray2}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorGray3}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ColorGray3}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource ColorGray1}" Padding="16">
            <DockPanel>
                <TextBlock Text="Setup" FontSize="18" FontWeight="Bold"/>
            </DockPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="24" Spacing="12">
            <TextBlock Text="Çekirdek kontroller, IPC ve kaynak hazırlığı yapılacak." Foreground="#AAA"/>
            <ProgressBar Height="8" Minimum="0" Maximum="100" Value="{Binding Progress}" Background="{StaticResource ColorGray2}"/>
            <ItemsControl ItemsSource="{Binding Steps}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Border Grid.Row="2" Background="{StaticResource ColorGray1}" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Style="{StaticResource MonoButton}" Content="Inject" Command="{Binding InjectCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
