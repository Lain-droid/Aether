<Window x:Class="AetherVisor.Frontend.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aether â€¢ Settings" Width="560" Height="420" WindowStartupLocation="CenterOwner"
        Background="Black" Foreground="#EEE">
    <Window.Resources>
        <SolidColorBrush x:Key="ColorGray1" Color="#111111"/>
        <SolidColorBrush x:Key="ColorGray2" Color="#222222"/>
        <SolidColorBrush x:Key="ColorGray3" Color="#444444"/>
        <Style x:Key="MonoButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorGray2}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorGray3}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="Background" Value="#222"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#000"/>
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="BorderBrush" Value="#333"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#EEE"/>
        </Style>
    </Window.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Spacing="12">
            <TextBlock Text="Editor" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Font Size" Width="100"/>
                <Slider Minimum="10" Maximum="24" Value="{Binding EditorFontSize}" Width="240"/>
                <TextBlock Text="{Binding EditorFontSize}" Width="40"/>
            </StackPanel>
            <CheckBox Content="Autocomplete Enabled" IsChecked="{Binding AutocompleteEnabled}"/>

            <Separator/>
            <TextBlock Text="Backend / AI" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="AI Sensitivity" Width="100"/>
                <Slider Minimum="0" Maximum="1" Value="{Binding AiSensitivity}" Width="240"/>
                <TextBlock Text="{Binding AiSensitivity, StringFormat=F2}" Width="40"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Style="{StaticResource MonoButton}" Content="Save" Command="{Binding SaveCommand}"/>
            <Button Style="{StaticResource MonoButton}" Content="Close" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
